generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Link {
  id             String   @id @default(cuid())
  url            String
  type           String   // youtube, twitch, telegram, article, generic
  title          String?
  metadata       String?  // JSON: preview, channel, etc.
  aiEnrichment   String?  // JSON: { title, topics, language, category, enrichedAt }
  createdAt      DateTime @default(now())
  inboxStatus    String   @default("pending") // pending | processing | processed | error
  processedPath  String?
}

model File {
  id             String   @id @default(cuid())
  filePath       String
  type           String   // pdf, word, image, ...
  filename       String
  size           Int?
  aiEnrichment   String?  // JSON: { title, topics, language, category, enrichedAt }
  createdAt      DateTime @default(now())
  inboxStatus    String   @default("pending")
  processedPath  String?
}

model Photo {
  id             String   @id @default(cuid())
  filePath       String
  type           String   // jpeg, png, webp, gif, ...
  filename       String
  size           Int?
  aiEnrichment   String?  // JSON: { title, topics, language, category, enrichedAt }
  createdAt      DateTime @default(now())
  inboxStatus    String   @default("pending")
  processedPath  String?
}

model Audio {
  id             String   @id @default(cuid())
  filePath       String
  type           String   // voice_note, podcast, ...
  duration       Int?     // segundos
  transcription  String?
  aiEnrichment   String?  // JSON: { title, topics, language, category, enrichedAt }
  createdAt      DateTime @default(now())
  inboxStatus    String   @default("pending")
  processedPath  String?
}

model Note {
  id             String   @id @default(cuid())
  content        String
  type           String   // note, code, task, idea
  aiEnrichment   String?  // JSON: { title, topics, language, category, enrichedAt }
  createdAt      DateTime @default(now())
  inboxStatus    String   @default("pending")
  processedPath  String?
}

model Video {
  id             String   @id @default(cuid())
  filePath       String
  type           String   // mp4, webm, youtube_downloaded, ...
  duration       Int?     // segundos
  title          String?
  aiEnrichment   String?  // JSON: { title, topics, language, category, enrichedAt }
  createdAt      DateTime @default(now())
  inboxStatus    String   @default("pending")
  processedPath  String?
}

// Referencia a cualquier ítem guardado como favorito (copia de campos para listar sin unir tablas).
model Favorite {
  id             String   @id @default(cuid())
  kind           String   // note | link | file | audio | video | photo
  sourceId       String   // id del ítem original
  createdAt      DateTime @default(now()) // cuándo se añadió a favoritos
  // Campos opcionales copiados del origen (para mostrar en carpeta Favoritos)
  title          String?
  content        String?
  url            String?
  filename       String?
  filePath       String?
  type           String?
  size           Int?
  duration       Int?
  transcription  String?
  metadata       String?  // JSON
  aiEnrichment   String?
  inboxStatus    String?
  processedPath  String?

  @@unique([kind, sourceId])
}

// Estado de apertura (para "Novedades": procesados aún no abiertos).
model ViewState {
  id           String   @id @default(cuid())
  kind         String   // note | link | file | photo | audio | video
  sourceId     String   // id del ítem original
  openedCount  Int      @default(0)
  lastOpenedAt DateTime?
  createdAt    DateTime @default(now())

  @@unique([kind, sourceId])
}
